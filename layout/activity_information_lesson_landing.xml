<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".InformationLessonLanding">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="325dp"
        android:layout_height="224dp"
        android:src="@drawable/mark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guiding bright minds"
        android:textAllCaps="true"
        android:textColor="@color/darkBlue"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <android.widget.Button
        android:id="@+id/lesson1"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/rounded_background3"
        android:text="LESSON 1"
        android:textColor="@color/darkBlue"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <android.widget.Button
        android:id="@+id/lesson2"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_background3"
        android:text="LESSON 2"
        android:textColor="@color/darkBlue"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lesson1" />

    <android.widget.Button
        android:id="@+id/lesson3"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_background3"
        android:text="LESSON 3"
        android:textColor="@color/darkBlue"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lesson2" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:backgroundTint="@color/light"
        app:itemBackground="@color/light"
        app:itemIconSize="50dp"
        app:itemIconTint="@drawable/selector"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>